doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="icon" href!="favicon.ico")
    meta(name="Description", content="Vue.js boilerplate by @loolzrules")
    title= process.env.VUE_APP_TITLE

    each fontName in [ 'Roboto-Bold', 'Roboto-Medium', 'Roboto-Regular', ]
      link(href=`/fonts/${fontName}.woff2` rel="preload" as="font" crossorigin)


  body
    noscript
      strong We're sorry but #{process.env.VUE_APP_TITLE} doesn't work properly without JavaScript enabled. Please enable it to continue.
    div#app
